<div class="loginpage">
  <div class="bar"></div>
  <div class="logintitle">
    <p class="fit">FIT</p>    
    <p class="trainer">TRAINER</p>
  </div>
  
  <div class="loginbox">
    <%- flash.each do |name, msg| -%>
      <%= content_tag :div, msg, id: "flash_#{name}" %>
    <%- end -%>  
    <h4 class="loginboxhead text-left">Sign in</h4>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          
      <div class="loginfield">
        <%= f.text_field :email, autofocus: true, placeholder: 'Email', class: 'textbox' %>
      </div>

      <div class="loginfield">
        <%= f.password_field :password, autocomplete: "off", placeholder: 'Password', class: 'textbox' %>
      </div>

      <div class="signin">
        <%= f.submit "Sign in", class: 'signinbtn' %>
      </div>
    
    <% end %>
  
    <%= render "devise/shared/links" %>
  </div>

  <div class="downloadapp">
    <p>Don't have an account yet? Download the app</p>
    <%= link_to "#", class: 'empty' do %>
      <%= image_tag "appstore.png", class: 'apple'  %>
    <% end %>
    <%= link_to "#", class: 'empty' do %>
      <%= image_tag "googleplay.png", class: 'google'  %>
    <% end %>
  </div>

  <div class="footer">
    <div class="footercontent">
      <h3>FIT</h3>
      <p>&copy FIT app. All rights reserved</p>
    </div>

  </div>
</div>
  